<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.azging.ging.view.UserHomeActivity">

    <!--<include layout="@layout/header_title"/>-->
    <RelativeLayout
        android:id="@+id/user_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ging_orange"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher_round"/>

        <TextView
            android:id="@+id/user_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/user_avatar"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            tools:text="Mr.Positive"/>
        <ImageView
            android:id="@+id/user_gender"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/user_nick"
            tools:src="@drawable/icon_boy"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_next"/>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/home_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_view"
        android:orientation="vertical">

        <include
            android:id="@+id/my_question"
            layout="@layout/row_list_icon"/>

        <View style="@style/break_line"/>

        <include
            android:id="@+id/my_answer"
            layout="@layout/row_list_icon"/>

        <View style="@style/break_line"/>

        <include
            android:id="@+id/my_wallet"
            layout="@layout/row_list_icon"/>

        <View style="@style/break_line"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <include
            android:id="@+id/feedback"
            layout="@layout/row_list_icon"/>

        <View style="@style/break_line"/>

        <include
            android:id="@+id/about_us"
            layout="@layout/row_list_icon"/>

        <View style="@style/break_line"/>
    </LinearLayout>

    <TextView
        android:id="@+id/logoff"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:background="@drawable/bg_logoff"
        android:gravity="center"
        android:text="@string/logoff"/>
</RelativeLayout>
